# Contact Finder Configuration
# Multi-source contact discovery system
#
# Copy this to config.yaml and fill in your API keys

api_keys:
  # Blitz API - Email/Phone enrichment from LinkedIn
  blitz:
    default: "your_blitz_api_key_here"
    active: "default"  # Which key to use

  # LeadMagic - Email finder (may cancel if underperforming)
  leadmagic: "your_leadmagic_api_key_here"

  # Scrapin - LinkedIn profile/company enrichment
  scrapin: "your_scrapin_api_key_here"

  # Exa.ai - Semantic search
  exa: "your_exa_api_key_here"

  # Serper - Google search API
  serper: "your_serper_api_key_here"

  # ZenRows - Web scraping fallback
  zenrows: "your_zenrows_api_key_here"

# LLM Configuration - supports OpenAI and Anthropic
llm:
  provider: "openai"  # "openai" or "anthropic"
  openai_api_key: "${OPENAI_API_KEY}"
  anthropic_api_key: "${ANTHROPIC_API_KEY}"
  model: "gpt-4o-mini"  # or "claude-3-haiku-20240307" for Anthropic
  temperature: 0.1
  max_tokens: 500

# Cost priority - FREE APIs first
cost_priority:
  free: [exa, scrapin]      # Use first - no cost
  cheap: [serper, blitz]    # Low cost
  paid: [leadmagic]         # May cancel if not performing

# Target titles by vertical
verticals:
  trucking:
    titles:
      - Owner
      - Operations Manager
      - Fleet Manager
      - Dispatcher
      - Safety Director
      - Terminal Manager
  plumbing_hvac:
    titles:
      - Owner
      - Service Manager
      - Office Manager
      - Operations Manager
      - General Manager
  dental:
    titles:
      - Practice Owner
      - Office Manager
      - Practice Manager
      - Treatment Coordinator
      - Dental Director
  default:
    titles:
      - Owner
      - CEO
      - President
      - General Manager
      - Operations Manager
      - Office Manager
      - Director

# Rate limits per API (requests per minute)
rate_limits:
  serper: 100
  exa: 60
  scrapin: 30
  blitz: 100
  leadmagic: 400

# Concurrency settings
concurrency:
  max_workers: 50          # Parallel company processing
  checkpoint_interval: 100 # Save progress every N records
  timeout_seconds: 30      # Per-request timeout

# Confidence thresholds
thresholds:
  high_confidence: 85      # Auto-accept
  medium_confidence: 70    # Needs review
  low_confidence: 50       # Manual review required

# Enrichment settings
enrichment:
  get_phone: false         # Skip phone by default (saves 3 credits)
  validate_email: true     # Always validate emails
  max_contacts_per_company: 3  # Top N contacts to return

# Stages - toggle on/off
stages:
  linkedin_discovery: true
  website_scraping: true
  blitz_icp: true
  leadmagic: true
  scrapin: true
  exa: true
  llm_validation: true

# Blacklist domains (skip these)
blacklist:
  domains:
    - linkedin.com
    - facebook.com
    - twitter.com
    - instagram.com
    - yelp.com
    - bbb.org
    - yellowpages.com
